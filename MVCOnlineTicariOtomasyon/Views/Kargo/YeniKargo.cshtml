@model MVCOnlineTicariOtomasyon.Models.SINIFLAR.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<br />
<h2>Kargo Detay Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TakipKodu)
    <br />
   <input type="text"value="@ViewBag.takipkod" class="form-control" readonly name="TakipKodu" />
    <br />
    @Html.LabelFor(x => x.Personel)
    <br />
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Alıcı)
    <br />
    @Html.TextBoxFor(x => x.Alıcı, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.TakipKodu)
    <br />
    <input class="form-control" type="date" name="Tarih" />
    <br />
    @Html.LabelFor(x => x.Açıklama)
    <br />
    @Html.TextAreaFor(x => x.Açıklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">KAYDET</button>
</form>

