@using MVCOnlineTicariOtomasyon.Models.SINIFLAR
@model List<SatışHaretket>
@{
    ViewBag.Title = "MüşteriSatış";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı:@ViewBag.cari</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        <th>YAZDIR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatışId</td>
            <td>@x.Ürün.ÜrünAd</td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyAd</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:gold">YAZDIR</a></td>
        </tr>
    }
</table>


