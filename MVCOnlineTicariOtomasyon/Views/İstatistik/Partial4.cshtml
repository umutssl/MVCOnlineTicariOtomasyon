@model IEnumerable<MVCOnlineTicariOtomasyon.Models.SINIFLAR.SınıfGrup5>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Topam Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{int sırano = 0; }
                @foreach (var x in Model)
                {


                    <tr>
                        <td>@{sırano++;}@sırano</td>
                        <td>@x.marka</td>
                        <td>
                            @if (x.sayı >=1 && x.sayı <=5)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.sayı >=6 && x.sayı <=8)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.sayı >=9 && x.sayı <=12)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.sayı >= 1 && x.sayı <= 5)
                            {
                                <span class="badge bg-danger">@x.sayı</span>
                            }
                            @if (x.sayı >= 6 && x.sayı <= 8)
                            {
                                <span class="badge bg-warning">@x.sayı</span>
                            }
                            @if (x.sayı >= 9 && x.sayı <= 12)
                            {
                                <span class="badge bg-success">@x.sayı</span>
                            }




                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>