@using MVCOnlineTicariOtomasyon.Models.SINIFLAR
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı:@ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        
        <th>PERSONEL</th>
        <th>SATIŞLAR </th>
    </tr>
    @foreach (var x in Model)
    {


        <tr>
            
            <td>@x.PersonelAd @x.PersonelSoyAd</td>
            
            
            <td><a href="/Departman/DepartmanPersonelSatış/@x.PersonelID" class="btn btn-default" style="background-color:crimson">SATIŞLAR</a></td>
        </tr>
    }
</table>
