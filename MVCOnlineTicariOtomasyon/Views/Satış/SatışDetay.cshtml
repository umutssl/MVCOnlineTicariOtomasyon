
@using MVCOnlineTicariOtomasyon.Models.SINIFLAR
@model List<SatışHaretket>
@{
    ViewBag.Title = "SatışDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satış Detayı</h2>
<br />

<table class="table table-condensed">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>PERSONEL</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatışId</td>
            <td>@x.Ürün.ÜrünAd</td>
            <td>@x.Cari.CariAd  @x.Cari.CariSoyAd</td>
            <td>@x.Personel.PersonelAd  @x.Personel.PersonelSoyAd</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color:darkkhaki">YAZDIR</button>
